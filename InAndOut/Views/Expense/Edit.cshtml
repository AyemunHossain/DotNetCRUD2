@model InAndOut.Models.Expense

<div class="pt-5">
    <h2>Edit Old Expense</h2>


</div>
<form method="post" asp-action="Edit">
    <input asp-for="Id" hidden />
    <div class="row">
        <div class="col-12">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ExpenseName"></label>
                    <input asp-for="ExpenseName" class="form-control" />
                    <span asp-validation-for="ExpenseName" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="Amount"></label>
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

            </div>
            <div class="row mb-5">
                <div class="col-2">
                    <input type="submit" class="btn btn-danger w-100" value="Update" />
                </div>
                <div class="col-2 ml-lg-auto">
                    <a asp-action="Index" class="btn btn-dark w-100">Discard</a>
                </div>
            </div>
        </div>
    </div>
</form>
<div>
    <a asp-action="Index"><-- Back to List</a>
</div>


@section Scripts{

    @{<partial name="_ValidationScriptsPartial" />}

}